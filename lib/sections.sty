\pgfkeys{
    /talent/.is family, /talent,
    % Here are the options that a user can pass
    default/.style = {
        name = Unnamed,
        active = false,
        ranked = false,
    },
    name/.estore in = \talentName,
    active/.estore in = \talentActive,
    ranked/.estore in = \talentRanked,
}

\newcommand\Talent[2][]{
    \pgfkeys{/talent, default, #1}

    \vspace{1.5em}
    \belowpdfbookmark{\talentName}{talent-\talentName}
    \noindent{\LARGE\sffamily\color{talent}\talentName}\\
    \textbf{Activation:} \talentActive\\
    \textbf{Ranked:} \talentRanked\\
    #2
}
