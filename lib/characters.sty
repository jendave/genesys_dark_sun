\newcommand\Creature[2][]{
    \pgfkeys{/creature, default, #1}%

    \noindent{\LARGE\sffamily\color{creature} \creatureName \hspace{.1em} (\creatureType) }\\

    \noindent\begin{minipage}[c]{\linewidth}
    \noindent
    \hfill
    \charPart{BRAWN}{\creatureBrawn}~\charPart{AGILITY}{\creatureAgility}~\charPart{INTELLECT}{\creatureIntellect}~\charPart{CUNNING}{\creatureCunning}~\charPart{WILLPOWER}{\creatureWillpower}~\charPart{PRESENCE}{\creaturePresence}%
    \hfill
    \hspace*{\fill}
    \Derived{Soak}{\creatureSoak}
    \Derived{Wound Threshold}{\creatureWounds}
    \DerivedSplit{Defense}{\creatureMelee}{\creatureRanged}{Melee}{Ranged}
    \hspace*{\fill}
    \null
    \end{minipage}

    \noindent
    \textbf{Skills:} \creatureSkills

    \noindent
    \textbf{Talents:} \creatureTalents

    \noindent
    \textbf{Abilities:} \creatureAbilities

    \noindent
    \textbf{Equipment:} \creatureEquipment
}

